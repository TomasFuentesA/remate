<table id="myTable" class="table">
  <thead>
    <tr>
      <th>Listado de Comunas</th>
      <th>Provincia</th>
      <th>Region</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @communes.each do |commune| %>

      <tr>
        <td><%= commune.name %></td>
        <% if commune.province %>

        <td><%= commune.province.name %></td>
        <td><%= commune.province.region.name %></td>
        <%end%>

        <td>
          <%= link_to 'Show', commune %>
          <%= link_to 'Edit', edit_commune_path(commune) %>
          <%= link_to 'Destroy', commune, method: :delete, data: { confirm: 'Are you sure?' } %>

      </tr>
    <% end %>
  </tbody>
</table>

