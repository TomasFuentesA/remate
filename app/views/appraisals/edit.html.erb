
<%= form_with model: @appraisal do |form| %>
    <%= form.label :appraisal, "Editar tasaciÃ³n" %>

    <div>
    <%= @appraisal.id %>
    <h2><%= @appraisal.realty.name_realty %> </h2>
  </div>
 

    <div class="field">
      <%= form.label :realty_id, "Seleccionar Propiedad" %>
      <%= form.select :realty_id, options_for_select(Realty.all.collect {|p| [p.name_realty, p.id]}, @appraisal.realty_id), { include_blank: "Seleccione"} %>
    </div>                              
  
    <div class="form-group col-md-2">
         <%= form.label :date, "Fecha" %>
         <%= form.text_field :date,  data:{provide:'datepicker',date_format: "dd-mm-yyyy"},autocomplete: "off" %>
    </div>

    <div class="form-group col-md-2">
        <%= form.label :entity, "Entidad" %>
        <%= form.text_field :entity, id: :entity , class:"form-control border" ,autofocus: true%>
    </div>
  
    <div class="form-group col-md-2">
      <%= form.label :price_uf, "Precio UF" %>
      <%= form.number_field :price_uf, id: :price_uf , class:"form-control border" %>
    </div>

    <div class="form-group col-md-2">
      <%= form.label :price_clp, "Precio CLP" %>
      <%= form.number_field :price_uf, id: :price_uf , class:"form-control border" %>
    </div>

    <div class="form-group col-md-2">
      <%= form.label :price_usd, "Precio USD" %>
      <%= form.number_field :price_usd, id: :price_usd , class:"form-control border" %>
    </div>
  
    <div class="form-group col-md-2">
    <%= form.label :observation %>
    <%= form.text_field :observation, id: :name %>
  </div>
  
  
  
  
  
   <%= form.submit "Guardar" %>
  
  <% end %>
  