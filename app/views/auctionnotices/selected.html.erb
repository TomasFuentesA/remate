<h1>  Avisos Seleccionados </h1>

<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col"></th>
      <th scope="col">Avisos Seleccionados</th>
      <th scope="col">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @auctionnotices.each_with_index do |auctionnotice, i| %>

      <tr>
        <td scope="row"><%= i + 1 %></td>
        <td><%= auctionnotice.auction %></td>

        <td>
          <%= link_to "Ver", auctionnotice, class:"btn btn-info" %>
          <%= link_to 'Editar', edit_auctionnotice_path(auctionnotice) ,class:"btn btn-warning"%>
          <%= link_to 'Descartar', rejection_path(auctionnotice), method: :post, class:"btn btn-danger" %>

           <%= link_to 'Asociar a Propiedad', new_auctionnotice_auction_path(auctionnotice), class:"btn btn-success" %>
            </td>
      </tr>
    <% end %>
  </tbody>
</table>

