        list += '<option value= <%= empresa.id%>> <%= empresa.name%> / <%= empresa.rut %> </option>'
      <%end%>
      $('select#persona_id').html(list); 
    }
  }

  function Function(clr) {
    vendedor = clr
  }
</script>

