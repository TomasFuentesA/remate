<br>
<div class="container-fluid ">
  <div class="row">
    <div class="col-md-auto">
<%= form_with model: @judicialfile, url: judicialfiles_path , remote: true do |form| %>

  <%= form.label :type_judgement, "Nuevo Expediente Judicial" %>

  <div class="field">
    <%= form.label :judgement_id, "Seleccionar Juicio" %>
    <%= form.select :judgement_id, options_for_select(Judgement.all.collect {|p| [p.full_name_judgement, p.id]}), { include_blank: "Seleccione"}, class:"form-control border" %>
  </div>

  <div class="form-group col-md-2">
    <%= form.label :date, "Fecha" %>
    <%= form.text_field :date,  data:{provide:'datepicker',date_format: "dd-mm-yyyy"},autocomplete: "off" %>
  </div>



  <div class="field">
    <%= form.label :obs, "Observacion:" %>
    <%= form.text_area :obs, id: :obs ,autofocus: true, class:"form-control border"%>
  </div>



   <%= form.submit "Guardar",class: "btn btn-success" %>

<% end %>
    </div>  
  </div>
</div>