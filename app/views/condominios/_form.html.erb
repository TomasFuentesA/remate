<div class="container">
  <div class="row">
    <div>
      <div>
        <div class="card-body">
         <%= form_with model:  @condominio, url: condominios_path ,id: :formulary do |form| %>
          <div class="form-group">
            <div class="row ">
              <div class="col-md-10">
                  <%= form.label :name, "Nombre Condominio" %>
                  <%= form.text_field :name , class:"form-control border" ,autofocus: true, required: true %>
              </div>
            
            </div>
          </div>
          <div class="form-group">
            <div class="row ">
              <div class="col-md-10">
                <%= form.label :address, "Direccion" %>
                <%= form.text_field :address, id: :address , class:"form-control border" ,autofocus: true, required: true %>
              </div>
            </div>
            <div class="form-group">
              <div class="row ">
                <div class="col-md-10">
                  <%= form.label :commune_id, "Comuna" %>
                  <%= form.select :commune_id, options_for_select(Commune.order(:name).collect {|c| [c.name,c.id]}), {include_blank: "Seleccione"} ,class:"custom-select mr-sm-2", required: true %>

                </div>
              </div>
            </div>
            <div class="form-group">
              <%= form.submit "Guardar", class: "btn btn-success"%>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>