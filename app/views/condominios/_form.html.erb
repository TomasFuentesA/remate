<%= form_with model:  @condominio, url: condominios_path ,id: :formulary do |form| %>
  <%= form.label :name, "Ingreso de nuevo Condominio/Edificio" %>
  <%= form.text_field :name  %>


  <div class="form-group col-md-2">
    <%= form.label :address, "Direccion" %>
    <%= form.text_field :address, id: :address , class: "form-control" ,autofocus: true%>
  </div>

  <div class="form-group col-md-2">
    <%= form.label :commune_id, "Comuna" %>
    <%= form.select :commune_id, options_for_select(Commune.all.collect {|p| [p.name, p.id]}, { include_blank: "Seleccione"}) %>
  </div>



  


  <di class = "form-group col-md-2">
    <%= form.submit "Guardar", class: "btn btn-success"%>
  </div>
 
<% end %>
