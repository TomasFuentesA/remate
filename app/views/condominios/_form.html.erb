 
<div class="container">
  <div class="row">
    <div>
      <div>
        <div class="card-body">
        <%= render 'errors' %>
          <%= form_with model: @condominio,id: :formulary, remote: true do |form| %>
            <div class="form-group">
              <div class="row ">
                <div class="col-md-10">
                  <%= form.label :name, "Nombre Condominio" %>
                  <%= form.text_field :name , class:"form-control border" ,autofocus: true, required: true %>
                </div>
            
              </div>
            </div>
            <div class="form-group">
              <div class="row ">
                <div class="col-md-10">
                  <%= form.label :address, "Direccion" %>
                  <%= form.text_field :address, id: :address , class:"form-control border" ,autofocus: true, required: true %>
                </div>
              </div>
            <div class="form-group">
              <div class="row ">
                <div class="col-md-10">
                  <%= form.label :commune_id, "Comuna" %>
                  <%= form.select :commune_id, options_for_select(Commune.order(:name).collect {|c| [c.name+" - "+c.province.name+" - "+c.province.region.name,c.id]}), {include_blank: "Seleccione"} ,{class:"selectpicker", data: {"live-search": true }, required: true}  %>
                </div>
              </div>
            </div>
            <div class = "form-group">
              <div class="row">
                <div class = "col-md-10">
                  <%= form.label :legal_persona_id, "Persona legal asociada" %>
                  <%= form.select :legal_persona_id, options_for_select(LegalPersona.order(:id).collect {|c| [c.name + " / " + c.fantasy_name + " / " + c.alias, c.id]}), {include_blank: "Seleccione", value: '0'} ,{class:"selectpicker", data: {"live-search": true }} %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class = "row">
                <%= form.submit "Guardar", class: "btn btn-success"%>
                
            </div>
          <% end %>
          
          </div>
        </div>
      </div>
    </div>
<%= render "legal_personas/modallegalpersona" %>
 