<br>
<div class="row" id="fileview">
  <div class="col-principal col-md-8">
    <div class="field">
      <%= @persona.rut %>
    </div>
    <div class="field">
      <%= @persona.name %>
    </div>
    
      <% if @persona.phones.any? %>
        <div class="field">
          <% @phones.each do |phone| %>
            <%= phone.phone_a %>
            <%= phone.phone_b %>
            <%= phone.phone_c %>
          <% end %>
          </div>
      <% end %>
      <% if @persona.emails.any? %>
        <div class="field">
          <% @emails.each do |email| %>
            <%= email.email_a %>
            <%= email.email_b %>
            <%= email.email_c %>
          <% end %>
        </div>
      <% end %>
      <% if @persona.directions.any? %>
        <div class="field">
          <% @directions.each do |direction| %>
            <%= direction.directiona %>
            <%= direction.directionb %>
            <%= direction.directionc %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>










  <div class="col-lateral col-md-4"">
    <div class="col-lateral col-md-4"">
      <% unless @persona.phones.any? %>
        <%= link_to 'Nuevo telefono', new_persona_phone_path(@persona) ,class:"button"%>
    </div>
      <% else %>
    <div class="col-lateral col-md-4"">
      <%= link_to 'editar telefono',   edit_persona_phone_path(@persona,@phones.ids) ,class:"button"%>
    </div>
      <% end %>
      <% unless @persona.emails.any? %>
        <%= link_to 'Nuevo Correo', new_persona_email_path(@persona) ,class:"button"%>
      <% else %>
        <div class="col-lateral col-md-4"">
          <%= link_to 'editar correo', edit_persona_email_path(@persona,@emails.ids) ,class:"button"%>
        </div>
      <% end %>
      <% unless @persona.directions.any? %>
        <div class="col-lateral col-md-4"">
          <%= link_to 'Nueva direccion', new_persona_direction_path(@persona) ,class:"button"%>
        </div>
        <% else %>
        <div class="col-lateral col-md-4"">
        <%= link_to 'editar direccion',   edit_persona_direction_path(@persona,@directions.ids) ,class:"button"%>
        </div>
       <% end %>


  </div>
</div>
