<br>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-7 card card-body">
      <div class="field">
        Rut: <%= @persona.rut %>
      </div>
      <div class="field">
        Nombre: <%= @persona.name %> <%= @persona.name2 %> <%= @persona.last_name1 %> <%= @persona.last_name2 %>
      </div>
      <% if @persona.phones.any? %>
        <div class="field">
          <% @phones.each do |phone| %>
            <div class="field">
              <div class="col">
                <%= phone.phone_a %>
              </div>
              <div class="col">
                <%= phone.phone_b %>
              </div>
              <div class="col">
                <%= phone.phone_c %>
              </div>
          </div>
        </div>
          <% end %>
          <% end %>
        <% if @persona.directions.any? %>
          <div class="field">
            <% @directions.each do |direction| %>
            <div class="field">


            <div class="col">
              <%= direction.directiona %>
            </div>
            <div class="col">
              <%= direction.directionb %>
            </div>
            <div class="col">
              <%= direction.directionc %>
            </div>
            </div>
          </div>

        <% end %>
        <% end %>
        <% if @persona.emails.any? %>
          <div class="field">
            <% @emails.each do |email| %>
            <div class="field">
              <div class="col">
              <%= email.email_a %>
              </div>
              <div class="col">

              <%= email.email_b %>
              </div>
              <div class="col">
              <%= email.email_c %>
              </div>
            <% end %>
            <% end %>
            </div>
          </div>
          <div class="col-sm-5 card card-body">
            Acciones:
            <div class="row-sm-3">
              <% unless @persona.phones.any? %>
                <div class="col-sm-8">
                  <%= link_to 'Nuevo telefono', new_persona_phone_path(@persona) ,class:"btn btn-primary"%>
                  <% else %>
                    <%= link_to 'editar telefono',   edit_legal_persona_phone_path(@legal_persona,@phones.ids) ,class:"btn btn-secondary"%>
              <% end %>
              <% unless @persona.emails.any? %>
                <%= link_to 'Nuevo Correo', new_persona_email_path(@persona) ,class:"btn btn-primary"%>
              <% else %>

                  <%= link_to 'editar correo', edit_persona_email_path(@persona,@emails.ids) ,class:"btn btn-secondary"%>




              </div>
              <% unless @legal_persona.directions.any? %>

                  <%= link_to 'Nueva direccion', new_legal_persona_direction_path(@legal_persona) ,class:"btn btn-primary"%>
                <% else %>
                <%= link_to 'editar direccion',   edit_legal_persona_direction_path(@legal_persona,@directions.ids) ,class:"btn btn-secondary"%>

               <% end %>
              <% unless @legal_persona.emails.any? %>

                  <%= link_to 'Nuevo Correo', new_legal_persona_email_path(@legal_persona) ,class:"btn btn-primary"%>
               <% else %>
                 <%= link_to 'editar correo', edit_legal_persona_email_path(@legal_persona,@emails.ids) ,class:"btn btn-secondary"%>
                 </div>
              <% end %>



             </div>




            </div>

    </div>
  </div>
</div>










  <div class="col-lateral col-md-4"">
    <div class="col-lateral col-md-4"">
      <% unless @persona.phones.any? %>
        <%= link_to 'Nuevo telefono', new_persona_phone_path(@persona) ,class:"button"%>
    </div>
      <% else %>
    <div class="col-lateral col-md-4"">
      <%= link_to 'editar telefono',   edit_persona_phone_path(@persona,@phones.ids) ,class:"button"%>
    </div>
      <% end %>
      <% unless @persona.emails.any? %>
        <%= link_to 'Nuevo Correo', new_persona_email_path(@persona) ,class:"button"%>
      <% else %>

          <%= link_to 'editar correo', edit_persona_email_path(@persona,@emails.ids) ,class:"button"%>
        </div>
      <% end %>
      <% unless @persona.directions.any? %>
        <div class="col-lateral col-md-4"">
          <%= link_to 'Nueva direccion', new_persona_direction_path(@persona) ,class:"button"%>
        </div>
        <% else %>
        <div class="col-lateral col-md-4"">
        <%= link_to 'editar direccion',   edit_persona_direction_path(@persona,@directions.ids) ,class:"button"%>
        </div>
       <% end %>


  </div>
</div>
