<%= form_with model: @domainfile do |form| %>
    <%= form.label :type_judgement, "Editar DomainFile" %>

    <div class= "row">
      <div class = "col" >
        <h2><%= @domainfile.domain.type_modality%> </h2>
      </div>
    </div>
  
  <div class = "row">     
    <div class="form-group col-md-2">
      <%= form.label :date, "Fecha" %>
      <%= form.text_field :date,  data:{provide:'datepicker',date_format: "dd-mm-yyyy"},autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class = "row">
    <div class="form-group col-md-2">
      <%= form.label :obs_string, "Observacion:" %>
      <%= form.text_area :obs_string, id: :obs_string ,autofocus: true, class:"form-control border"%>
    </div>
  </div>
  <div class = "row">
    <div class="form-group col-md-2">
      <div class="custom-file">
        <%= form.file_field :file_name, id: :file_name ,class:"custom-file-input",autofocus: true, required: true %>

        <label class="custom-file-label" for="customFile"><%= link_to @domainfile.file_name.to_s.split('/')[5], File.join(root_url.to_s,@domainfile.file_name.to_s)%></label>
      </div>
    </div>
  </div>  
  
  
  
  
  
    <br>
   <%= form.submit "Guardar", class: "btn btn-primary" %>
  
  <% end %>
  <script>
  // Add the following code if you want the name of the file appear on select
  $(".custom-file-input").on("change", function () {
    var fileName = $(this).val().split("\\").pop();
    $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
  });
</script>