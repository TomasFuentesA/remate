<%= form_with model: @inscriptionfile do |form| %>
    <%= form.label :type_judgement, "Editar Expediente" %>

    <div>
    <%= @inscriptionfile.id %>
    <h2><%= @inscriptionfile.inscription.foja %> </h2>
  </div>
  
       
   <div class="form-group col-md-2">
     <%= form.label :date, "Fecha" %>
     <%= form.text_field :date,  data:{provide:'datepicker',date_format: "dd-mm-yyyy"},autocomplete: "off" %>
   </div>
  
   <div class="field">
    <%= form.label :obs, "Observacion:" %>
    <%= form.text_area :obs, id: :obs ,autofocus: true, class:"form-control border"%>
  </div>


 <div class="form-group">
          <div class="custom-file">
            <%= form.file_field :file_name, id: :file_name ,class:"custom-file-input",autofocus: true, required: true %>

            <label class="custom-file-label" for="customFile"><%= @inscriptionfile.file_name%></label>
          </div>
        </div>
  
  
  
  
  
  
   <%= form.submit "Guardar" %>
  
  <% end %>
  <script>
  // Add the following code if you want the name of the file appear on select
  $(".custom-file-input").on("change", function () {
    var fileName = $(this).val().split("\\").pop();
    $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
  });
</script>