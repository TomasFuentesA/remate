<h1>Listado de documentos de inscripciones</h1>


<br>
<%= link_to 'Nuevo documento de inscripcion', new_inscriptionfile_path ,class: "btn btn-primary"%>
</br>

<table   class="table table-bordered table-hover">
  <thead  class="thead-dark">
    <tr>
      <th scope="col">Foja</th>
      <th scope="col">NÃºmero</th>
      <th scope="col">CBRS</th>
      <th scope="col">Fecha</th>
      <th scope="col">Archivo</th>
      <th scope="col">Observacion</th>
      <th scope="col">Opciones</th>
    </tr>
  </thead>




  <tbody class="rounded-pill">
    <% @inscriptionfiles.each do |inscriptionfile| %>

      <tr>
        
        <td><%= inscriptionfile.inscription.foja %> </td>
        <td><%= inscriptionfile.inscription.number %> </td>
        <td><%= inscriptionfile.inscription.cbrs %></td>
        <td><%= inscriptionfile.date %></td>
        <% if inscriptionfile.file_name != "" %>
                <td><%= link_to inscriptionfile.file_name.to_s.split('/')[5], File.join(root_url.to_s,inscriptionfile.file_name.to_s)%> </td>
        <%else %>
                <td>Sin Archivo</td>
        <% end %>
        <td><%= inscriptionfile.obs%></td>


        <td>
          <%= link_to 'Ver', inscriptionfile.inscription , class: "btn btn-info" %>
          <%= link_to 'Edit', edit_inscriptionfile_path(inscriptionfile) , class: "btn btn-warning" %>
          <%= link_to 'Borrar', inscriptionfile, method: :delete, data: { confirm: 'Esta seguro?' } ,class: "btn btn-danger"%>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
