<%= form_with model: @economic_activity do |form| %>




  <div class="form-group col-md-2">
    <%= form.label :name, "Nombre Actividad" %>
    <%= form.text_field :name, id: :name , class:"form-control border" ,autofocus: true%>
  </div>

  <div class="form-group col-md-2">
    <%= form.label :codigo, "Codigo" %>
    <%= form.number_field :codigo, id: :codigo , class:"form-control border" ,autofocus: true%>
  </div>

  <div class="form-group col-md-2">
    <%= form.label :afecta_iva, "Afecta IVA" %>
    <%= form.text_field :afecta_iva, id: :afecta_iva , class:"form-control border" ,autofocus: true%>
  </div>

 <%= form.submit "Guardar" %>

<% end %>
