<div class= "container">
<div class= "row">
  <div class="col-sm-12 card card-body">
    <div class="row">
      <div class= "col-md-6">
        <label for="name"> Modalidad: </label>
        <input type = "text" id="name" class= "form-control" placeholder= "Foja" disable value = "<%= @inscription.foja %>" readonly>
      </div>
      <div class= "col-md-6">
        <label for="name"> Número </label>
        <input type = "text" id="name" class= "form-control" placeholder= "Name" disable value = "<%= @inscription.number %>" readonly>
      </div>
    </div>  
    <div class="row">
      <div class= "col-md-3">
        <label for="name"> Año: </label>
        <input type = "text" id="name" class= "form-control" placeholder= "Name" disable value = "<%= @inscription.year %>" readonly>
      </div>
      <div class= "col-md-6">
        <label for="name"> Fecha de posesion </label>
        <input type = "text" id="name" class= "form-control" placeholder= "Name" disable value = "<%= @inscription.cbrs %>" readonly>
      </div>
      <div class= "col-md-3">
        <label for="name"> Precio: </label>
        <input type = "text" id="name" class= "form-control" placeholder= "Name" disable value = "<%= @inscription.date %>" readonly>
      </div>
    </div> 
  </div>
</div>
</div>
<br>
<div class= "container">
<div class= "row">
  <table   class="table table-bordered table-hover">
    <thead  class="thead-dark">
      <tr>
        <th scope="col">Nombre(s) documento(s) asociado(s) </th>
      </tr>
    </thead>
    <tbody class="rounded-pill">
      <% Inscriptionfile.order(:id).each do |doc| %>
        <%if doc.inscription_id == @inscription.id %>
          <tr>
            <% if doc.file_name != "" %>
                <td><%= link_to doc.file_name.to_s.split('/')[5], File.join(root_url.to_s,doc.file_name.to_s)%> </td>
            <%else %>
                <td>Sin Archivo</td>
            <% end %>
          </tr>
        <%end%>  
      <%end%>
    </tbody>
  </table>
</div>      
</div>