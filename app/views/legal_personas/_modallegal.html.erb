                        <tr>
                            <th scope= "col"> 
                            Total
                            </th>
                        </tr>
                        </thead> 
                        <tbody class= "rounded-pill">
                        <tr>
                            <td scope = "row"> <%= var%> % </td>
                        </tr>
                        </tbody>
                    </table>   
                        
                    </div>
                </div>     
            <%end%>

