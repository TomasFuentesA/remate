                                        <%= link_to 'Borrar', domain, method: :delete, data: { confirm: 'Esta seguro?' } ,class: "btn btn-danger"%>
                                        
                                    </td>

                                </tr>
                                <%end%>
                            <%end%>    
                            <%end%>  
                        </tbody> 
                        </table>        
                    </div>
                </div>
            <% end %>
