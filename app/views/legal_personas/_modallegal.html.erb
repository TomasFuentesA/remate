                                        <tr>
                                        <td scope="row">
                                            <%= activity.name_activity %>
                                        </td>
                                        <td scope= "row">
                                            <%= activity.rubro %>
                                        </td>  
                                        <td scope="row">
                                            <%= activity.afect_iva %>
                                        </td>
                                        <td scope="row">
                                            <%= activity.code %>
                                        </td>
                                        </tr>  
                                        <% end %>
                                    </tbody>
                                    </table>    
