<div class="container-fluid ">
  <div class="row">
    <div class="col-md-auto">
<%= form_with model: @judgement, url: judgements_path , remote: true do |form| %>

  <%= form.label :type_judgement, "Nuevo juicio" %>

  <div class="field">
    <%= form.label :court_id, "Seleccionar Tribunal" %>
    <%= form.select :court_id, options_for_select(Court.all.collect {|p| [p.name, p.id]}), { include_blank: "Seleccione"}, class:"form-control border" %>
  </div>

  <div class="field">
    <%= form.label :lyrics, "Letra:" %>
    <%= form.text_field :lyrics, id: :lyrics ,autofocus: true, class:"form-control border"%>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :number, "Numero:" %>
    <%= form.number_field :number, id: :number , class:"form-control border" %>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :year, "AÃ±o:" %>
    <%= form.number_field :year, id: :year , class:"form-control border" %>
  </div>

  <div class="field">
    <%= form.label :type_judgement, "Tipo de Juicio" %>
    <%= form.select :type_judgement, options_for_select(Judgement.type_judgements.keys.to_a), { include_blank: "Seleccione"},class:"form-control border"  %>
  </div>

  <div class="field">
    <%= form.label :demandante, "Demandante:" %>
    <%= form.text_field :demandante, id: :demandante, class:"form-control border" %>
  </div>

  <div class="field">
    <%= form.label :demandado, "Demandado:" %>
    <%= form.text_field :demandado, id: :demandado, class:"form-control border" %>
  </div>

   <%= form.submit "Guardar",class: "btn btn-success" %>

<% end %>
    </div>  
  </div>
</div>