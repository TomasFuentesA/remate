        var persona_type = '<%=judgementPersona.persona_type%>'
        var judgement_type = '<%=judgementPersona.judgement_type%>'
          if(persona_id==pesonaNaturalId && judgement_type==type && persona_type=="Natural"){
            return true
          }
        <%end%>
      }
      return false
    }
