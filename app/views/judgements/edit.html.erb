<%= form_with model: @judgement do |form| %>
    <%= form.label :type_judgement, "Editar juicio" %>

    <div>
    <%= @judgement.id %>
    <h2><%= @judgement.court.name %>, <%= @judgement.rol_trial %> </h2>
  </div>
  
    <div class="field">
      <%= form.label :court_id, "Seleccionar Tribunal" %>
      <%= form.select :court_id, options_for_select(Court.all.collect {|p| [p.name, p.id]}, @judgement.court_id), { include_blank: "Seleccione"} %>
    </div>                              
  
    <div class="field">
      <%= form.label :lyrics, "Letra:" %>
      <%= form.text_field :lyrics, id: :lyrics ,autofocus: true%>
    </div>
  
    <div class="form-group col-md-2">
      <%= form.label :number, "Numero:" %>
      <%= form.number_field :number, id: :number , class:"form-control border" %>
    </div>
  
    <div class="form-group col-md-2">
      <%= form.label :year, "AÃ±o:" %>
      <%= form.number_field :year, id: :year , class:"form-control border" %>
    </div>
  
    <div class="field">
      <%= form.label :type_judgement, "Tipo de Juicio" %>
      <%= form.select :type_judgement, options_for_select(Judgement.type_judgements.keys.to_a, @judgement.type_judgement), { include_blank: "Seleccione"}  %>
    </div>
  
    <div class="field">
      <%= form.label :demandante, "Demandante:" %>
      <%= form.text_field :demandante, id: :demandante%>
    </div>
  
    <div class="field">
      <%= form.label :demandado, "Demandado:" %>
      <%= form.text_field :demandado, id: :demandado%>
    </div>
  
    <div class="row">



            <div class="form-group col-md-3">
              
               <div class = "col-md-10">
                <%= form.label :legal_persona_id, "Ingrese Demandantes" %>
                <%= form.select :legal_persona_id, options_for_select(LegalPersona.order(:id).collect {|c| [c.name + " / " + c.fantasy_name + " / " + c.alias, c.id]}), {include_blank: "Seleccione", value: '0'} ,{class:"selectpicker", data: {"live-search": true }} %>
              </div>
               
              <div class = "col-md-10">
                <%= form.label :legal_persona_id, "Ingrese Abogados de Demandantes" %>
                <%= form.select :legal_persona_id, options_for_select(LegalPersona.order(:id).collect {|c| [c.name + " / " + c.fantasy_name + " / " + c.alias, c.id]}), {include_blank: "Seleccione", value: '0'} ,{class:"selectpicker", data: {"live-search": true }} %>
              </div>
            
            
              <div class = "col-md-10">
                <%= form.label :legal_persona_id, "Ingrese Demandados" %>
                <%= form.select :legal_persona_id, options_for_select(Persona.order(:id).collect {|c| [c.full_name_persona, c.id]}), {include_blank: "Seleccione", value: '0'} ,{class:"selectpicker", data: {"live-search": true }} %>
              </div>
            
              <div class = "col-md-10">
                <%= form.label :legal_persona_id, "Ingrese Abogados de Demandados" %>
                <%= form.select :legal_persona_id, options_for_select(Persona.order(:id).collect {|c| [c.full_name_persona, c.id]}), {include_blank: "Seleccione", value: '0'} ,{class:"selectpicker", data: {"live-search": true }} %>
              </div>
               
            </div>

    </div>
  
  
  
  
  
  
  
   <%= form.submit "Guardar" %>
  
  <% end %>
  