<div class="row justify-content-md-center">
  <div class="card">
    <div class="card-body">
      <%= form_with model: @region, local: true do |form| %>
      <h3>Ingreso de nueva Región</h3>
      <div class="field">
        <%= form.label :name, "Nombre" %>
        <%= form.text_field :name, id: :name, autocomplete: "off" , class:"form-control border", required: true %>
      </div>
      <div class="form-group">
        <%= form.label :number_region, "Nº Región" %>
        <%= form.number_field :number_region, id: :number_region, autocomplete: "off" , class:"form-control border", required: true %>
      </div>
      <br>
      <div class="form-group">
        <%= form.submit "Guardar",class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
 