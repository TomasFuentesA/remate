<%= form_with model: Realty.new do |form| %>
  <%= form.label :name, "Ingreso de Propiedad." %>

  <div class="field">
    <%= form.label :street_type_i, "Tipo de Calle" %>
    <%= form.select :street_type_id, options_for_select([["Calle", 0],["Avenida", 1], ["Pasaje", 2]]), {include_blank: "Seleccione"} %>
  </div>

  <div class="field">
    <%= form.label :property_type, "Tipo de Propiedad" %>
    <%= form.select :property_type_id, options_for_select([["Casa", 0],["Dpto.", 1],["Local", 2]]), {include_blank: "Seleccione"} %>
  </div>

  <div class="field">
    <%= form.label :street, "Calle" %>
    <%= form.text_field :street, id: :street %>
  </div>

  <div class="field">
    <%= form.label :number_unit, "Numero" %>
    <%= form.number_field :number_unit, id: :number_unit %>
  </div>

  <div class="field">
    <%= form.label :unit_estate, "Unidad" %>
    <%= form.text_field :unit_estate, id: :unit_estate %>
  </div>

  <div class="field">
    <%= form.label :commune_id, "Comuna" %>
    <%= form.select :commune_id, options_for_select(Commune.all.collect {|p| [p.name, p.id]}), { include_blank: "Seleccione"} %>
  </div>

 <%= form.submit "Ingresar" %>

<% end %>



