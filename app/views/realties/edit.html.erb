<div class="row justify-content-md-center">
  <div class="card">
    <div class="card-body">
      <div class="container">
        <div class="row">
          <div class="card-body">
            <%= form_with model: @realty do |form| %>
            <div class="form-group">
              <div class="row ">
                <h2>Propiedad: <%= @realty.address %>, <%= @realty.unit_estate %></h2>
              </div>
            </div>
            <div class="form-group">
              <div class="row ">
                <div class="col-md-6">
                  <%= form.fields_for :type_realty do |f| %>
                  <%= form.label :tipo, "tipo de propiedad" %>
                  <%= form.select :tipo, options_for_select(TypeRealty.tipos.keys.to_a),{include_blank: "Seleccione"} ,class:"custom-select mr-sm-2", required: true %>
                  <% end %>
                </div>
                <div class="col-md-6">
                  <%= form.label :name_realty, "Nombre de propiedad:" %>
                  <%= form.text_field :name_realty, id: :name_realty , class:"form-control border" ,autofocus: true, required: true %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="row ">
                <div class="col-md-3">
                  <%= form.label :street_type_id, "Tipo de Calle:" %>
                  <%= form.select :street_type_id, options_for_select([["Calle", 0],["Avenida", 1], ["Pasaje", 2], ["Camino", 3]]), {include_blank: "Seleccione"} ,class:"custom-select mr-sm-2", required: true %>
                </div>
                <div class="col-md-3">
                  <%= form.label :commune_id, "Comuna:" %>
                  <%= form.select :commune_id, options_for_select(Commune.all.collect {|p| [p.name+" - "+p.province.name+" - "+p.province.region.name, p.id]}, @realty.commune_id), { include_blank: "Seleccione"} ,class:"custom-select mr-sm-2", required: true %>
                </div>
                <div class="col-md-3">
                  <%= form.label :street, "Calle:" %>
                  <%= form.text_field :street, id: :street , class:"form-control border" ,autofocus: true, required: true %>
                </div>
                <div class="col-md-3">
                  <%= form.label :number_unit, "Numero:" %>
                  <%= form.number_field :number_unit, id: :number_unit , class:"form-control border" ,autofocus: true, required: true %>
                </div>
              </div>
              <div class="form-group">
                <div class="row ">
                  <div class="col-md-3">
                    <%= form.label :unit_estate, "Unidad:" %>
                    <%= form.text_field :unit_estate, id: :unit_estate , class:"form-control border" ,autofocus: true, required: true %>
                  </div>
                  <div class="col-md-3">
                    <%= form.label :population_villa, "Población/Villa/Conjunto:" %>
                    <%= form.text_field :population_villa, id: :population_villa , class:"form-control border" ,autofocus: true%>
                  </div>
                  <div class="col-md-3">
                    <%= form.label :condominio_id, "Condominio:" %>
                    <%= form.select :condominio_id, options_for_select(Condominio.order(:name).collect {|c| [c.name,c.id]}), {include_blank: "Seleccione"} ,class:"custom-select mr-sm-2", required: true %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row ">
                  <%= form.fields_for :characteristic do |form| %>
                  <div class="col-md-3">
                    <%= form.label :m2_land, "Sup.Terreno:" %>
                    <%= form.number_field :m2_land ,class:"custom-select mr-sm-2" %>
                  </div>
                  <div class="col-md-3">
                    <%= form.label :m2_land, "Sup.Construida:" %>
                    <%= form.number_field :m2_built ,class:"custom-select mr-sm-2" %>
                  </div>
                  <div class="col-md-3">
                    <%= form.label :material, "Material:" %>
                    <%= form.text_field :material ,class:"custom-select mr-sm-2" %>
                  </div>
                  <div class="col-md-3">
                    <%= form.label :built_year, "Año Construccion:" %>
                    <%= form.number_field :built_year ,class:"custom-select mr-sm-2" %>
                  </div>
                  <% end %>
                </div>
              </div>
              <div class="form-group">
                <div class="row ">
                  <div class="col-md-8">
                    <%= form.label :comment, "Comentarios" %>
                    <%= form.text_field :comment, class:"form-control rounded-0",autofocus: true, required: true %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <%= form.submit "Modificar Propiedad",class: "btn btn-success" %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>