<style>
.carousel-item img{
 width: auto;
 height: 100%;
 max-height: 500px;
 margin: auto; 
 display: block;
 }
</style>
<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" style="background-color: lightgrey;">
    <ol class="carousel-indicators">
        <% x = 0 %>
        <% @fileUpload.each do |fileUpload| %>
            <li data-target="#carouselExampleCaptions" data-slide-to="<%=x%>" class="<%=x == 0? "active" : "" %>"></li>
            <% x = x + 1 %>
        <% end %>
    </ol>
    <div class="carousel-inner">
        <% x = 0 %>
        <% @fileUpload.each do |fileUpload| %>
            <div class="carousel-item <%=x == 0? "active" : "" %>">
                <img src="<%= File.join(root_url.to_s+"uploads/",fileUpload.file_name.to_s) %>" style="width: 50%; margin: auto;" alt="<%=fileUpload.file_name.to_s%>">
            </div>
            <% x = x + 1 %>
        <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>