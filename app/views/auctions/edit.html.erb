
<h1>  Editar Aviso de Remate a Propiedad </h1>
<div class="container-fluid" id="auctionnoticenew" >
  <div class="row justify-content-md-center">
    <div class="col">
      <%= form_with model: @auction  do |form| %>
        <%= form.label :name, "Editar Remate" %>

        <div class="field" >
          <%= form.label :date, "Fecha" %>
          <%= form.text_field :date ,id: :date, onchange: "calculo_uf(this)", data:{provide:'datepicker',date_format: "dd-mm-yyyy"} %>
        </div>
        <div class="field">
          <%= form.label :hour, "Hora" %>
          <%= form.text_field :hour %>
        </div>
        <div class="field">
          <%= form.label :name, "Nombre" %>
          <%= form.text_field :name, id: :name %>
        </div>
        <div class="field">
          <%= form.label :court_id, "Seleccionar Tribunal" %>
          <%= form.select :court_id, options_for_select(Court.all.collect {|p| [p.name, p.id]}, @auction.court_id), { include_blank: "Seleccione"} %>
        </div>

        <div class="field">
          <%= form.label :lyrics, "Letra" %>
          <%= form.text_field :lyrics, id: :lyrics %>
        </div>
        <div class="field">
          <%= form.label :number, "Rol" %>
          <%= form.number_field :number, id: :number %>
        </div>
        <div class="field">
          <%= form.label :year, "Año" %>
          <%= form.number_field :year, id: :year %>
        </div>

        <div class="field" >
          <%= form.fields_for :judgements do |form| %>
          <div class="field">
            <%= form.label :type_judgment, "Seleccionar Juicio" %>
            <%= form.collection_select :type_judgement, Judgement.type_judgements.map { |c| [c.first, c.first] },  :first, :second ,prompt: "seleccione"  %>
          </div>
        <%= form.fields_for :parts do |c| %>
          <%= c.label :name, "parte 1" %>
          <%= c.text_field :part1 %>

          <%= c.label :name, "parte 2" %>
          <%= c.text_field :part2 %>
          <% end %>
          <% end %>
        <div class="field" >

        <div class="field" >
          <%= form.label :uf, "UF" %>
          <%= form.number_field :uf, id: :uf, disabled: @auction.uf.nil? , onchange: "calculo_uf(this)"  %>
        </div>
        <div class="field">
          <%= form.label :is_uf, "Opcion" %>
          <%= form.select :is_uf, [["uf", true], ["pesos", false]], {include_blank: "Seleccione Moneda"}, {onchange: "habilite_money(this)"} %>
        </div>
        <div class="field">
          <%= form.label :cost, "Costas" %>
          <%= form.number_field :cost, id: :cost, value: 0  %>
        </div>
        <div class="field" >
          <%= form.label :pesos, "Pesos" %>
          <%= form.number_field :pesos, id: :pesos, disabled: @auction.pesos.nil?, onchange: "calculo_uf(this)" %>
        </div>
        <div class="field">
          <%= form.label :total_minimum, "Total Minimo" %>
          <%= form.number_field :total_minimum, id: :total_minimum %>
        </div>
        <div class="field">
          <%= form.label :warranty, "Garantia" %>
          <%= form.number_field :warranty, id: :warranty %>
        </div>
        <div class="field">
          <%= form.label :fee, "Derechos" %>
          <%= form.number_field :fee, id: :fee %>
        </div>
        <div class="field">
          <%= form.label :realty_id, "Seleccionar Propiedad" %>
          <%= form.select :realty_id, options_for_select(Realty.all.collect {|p| [p.address, p.id]}, @auction.realty_id), { include_blank: "Seleccione"} %>
        </div>
        <%= form.submit "Guardar" %>
        <% end %>
        </div>

    <div class="col">
      <br>
      <div class="row justify-content-md-center">

        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Informacion de Remate</h5>

            <p class="card-text"><%= @auction.id%> <br> <%= @auction.auctionnotice.auction %></p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>




      </div>
      <br>
      <div class="row justify-content-md-center">


        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" >Añadir nueva Propiedad</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ingreso de Propiedad:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Crear</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<br>
