  <tbody>
    <% @auctions.each_with_index do |auction, i| %>
      <tr>
        <td scope="row"><%= i + 1 %></td>
        <td><%= auction.horary %> </td>
        <td><%= auction.court.name %></td>
        <td><%= auction.rol_trial %></td>
        <td><%= auction.name_of_the_judgment %></td>
        <td><%= auction.judgements.name %></td>
        <td><%= auction.realty.address %></td>
        <td><%= auction.realty.population_villa %></td>
        <td><%= auction.realty.population_villa %></td>
        <td><%= auction.total_minimum %></td>
        <td><%= auction.warranty %></td>
        <td><%= auction.realty.mt2_built %></td>
        <td><%= auction.realty.mt2_land %></td>
        <td><%= auction.status %></td>


        <td>
          
              <%= link_to 'Ver', auction ,class: "btn btn-info"%>
              <%= link_to 'Editar', edit_auction_path(auction),class: "btn btn-warning" %>
              <%= link_to 'Eliminar',auction, method: :delete, data: { confirm: 'Estas seguro?' } ,class: "btn btn-danger" %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>



