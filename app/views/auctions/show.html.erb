    </div>

  </div>

  <div class="col-lateral col-md-6">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-8 card card-body ">
          <div>
            <h2>Dirección: <%= @auction.realty.address %>, <%= @auction.realty.unit_estate %></h2>
          </div>
  
          <div style='width: 500px;' >
            <div id="map" style='width: 500px; height: 300px;'></div>
          </div>
          <hr>
          <h1>Información básica:</h1>
  
            <div class="field">
              <h4>Tipo de propiedad </h4>
               <%= @auction.realty.type_realty.tipo %>
           </div>
  
  
              <div class="field">
                <h4> Poblacion, Villa , Conjunto:</h4>
                <%= @auction.realty.population_villa %>
              </div>
  
              <% unless @realty.condominio.nil? %>
              <div class="field">
  
                 <h4>Condominio/Edificio/Parcelacion </h4>
                    <%= @realty.condominio.name %>
  
              <%else %>
  
               <div class="field">
  
                  no hay Condominio
               </div>
               <% end %>

              <div class="field">
                <h4>Rol Avaluo</h4>
                 <%= @auction.realty.appraisal_role %>
              </div>
  
  
               <div class="field">
                 <h4>Latitud</h4>
                  <%= @auction.realty.latitude %>
               </div>
  
               <div class="field">
                 <h4>Longitud</h4>
                <%= @auction.realty.longitude %>
              </div>
  
  
                <% unless @auction.realty.characteristic.nil? %>
                 <div class="field">
  
                 <h4>Construido mt2 </h4>
                   <%= @auction.realty.characteristic.m2_built %>
  
                 <h4>Terreno mt2 </h4>
                   <%= @auction.realty.characteristic.m2_land %>
                </div>
               <%else %>
  
                <div class="field">
  
                no hay caracteristicas
               </div>
              <% end %>
  
  
  
            
  
          <p></p>
            <div class="field">
              <h4>Destino Sii</h4>
              <%= @auction.realty.fiscal_destination %>
            </div>
  
          <p></p>
        </div>
          
          <h1>Ficha Tasaciones:</h1>
            <div class="field">
             <h4>Tasaciones</h4>
            
            
           
  
            <table   class="table table-bordered table-hover">
              <thead  class="thead-dark">
                <tr>
                  <th scope="col">Fecha</th>
                  <th scope="col">Entidad</th>
                  <th scope="col">Valor UF</th>
                  <th scope="col">Valor CLP</th>
                  <th scope="col">Valor USD</th>
                  <th scope="col">Observacion</th>
                  <th scope="col">Opciones</th>
                </tr>
              </thead>
             
              <tbody class="rounded-pill">
               
            
                 
                    <% @auction.realty.appraisal.each do |appraisal| %> 
                    <tr>
           
                    <td><%= appraisal.date %></td>
                    <td><%= appraisal.entity %></td>
                    <td><%= appraisal.price_uf %></td>
                    <td><%= appraisal.price_clp %></td>
                    <td><%= appraisal.price_usd %></td>
                    <td><%= appraisal.observation%></td>
                    
                    
            
                    <td>
                      <%= link_to 'Ver', @appraisal , class: "btn btn-info" %>
                      
                  </tr>
                  <% end %>
              </tbody>
            </table>
       
        
  
        </div>
        
        
  
   
      </div>
    </div>
  </div>




</div>


